<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:cardCornerRadius="20sp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP Dikirim Ke Nomor :"
            android:textAlignment="center"
            android:textColor="@color/textTheme"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/konfirmasiNomorTelepon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="+62 - XXXXXXXX"
            android:textColor="@color/textTheme"
            android:textSize="25sp"
            android:layout_marginTop="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:flow_horizontalAlign="center"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="100sp"
            android:paddingBottom="70sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/konfirmasiNomorTelepon">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5sp"
                android:clickable="true"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="10sp"
                app:strokeColor="@android:color/holo_blue_light"
                app:strokeWidth="3sp">

                <EditText
                    android:id="@+id/otp1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:focusedByDefault="true"
                    android:inputType="numberSigned"
                    android:maxLength="1"
                    android:nextFocusLeft="@id/otp1"
                    android:nextFocusRight="@id/otp2"
                    android:nextFocusUp="@id/otp1"
                    android:nextFocusDown="@id/otp2"
                    android:nextFocusForward="@id/otp2"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10sp"
                    android:paddingTop="5sp"
                    android:text="_"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5sp"
                android:clickable="true"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="10sp"
                app:strokeColor="@android:color/holo_blue_light"
                app:strokeWidth="3sp">

                <EditText
                    android:id="@+id/otp2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:inputType="numberSigned"
                    android:maxLength="1"
                    android:nextFocusLeft="@id/otp1"
                    android:nextFocusRight="@id/otp3"
                    android:nextFocusUp="@id/otp1"
                    android:nextFocusDown="@id/otp3"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10sp"
                    android:paddingTop="5sp"
                    android:text="_"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5sp"
                android:clickable="true"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="10sp"
                app:strokeColor="@android:color/holo_blue_light"
                app:strokeWidth="3sp">

                <EditText
                    android:id="@+id/otp3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:inputType="numberSigned"
                    android:maxLength="1"
                    android:nextFocusLeft="@id/otp2"
                    android:nextFocusRight="@id/otp4"
                    android:nextFocusUp="@id/otp2"
                    android:nextFocusDown="@id/otp4"
                    android:nextFocusForward="@id/otp4"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10sp"
                    android:paddingTop="5sp"
                    android:text="_"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5sp"
                android:clickable="true"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="10sp"
                app:strokeColor="@android:color/holo_blue_light"
                app:strokeWidth="3sp">

                <EditText
                    android:id="@+id/otp4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:inputType="numberSigned"
                    android:maxLength="1"
                    android:nextFocusLeft="@id/otp3"
                    android:nextFocusRight="@id/otp5"
                    android:nextFocusUp="@id/otp3"
                    android:nextFocusDown="@id/otp5"
                    android:nextFocusForward="@id/otp5"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10sp"
                    android:paddingTop="5sp"
                    android:text="_"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5sp"
                android:clickable="true"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="10sp"
                app:strokeColor="@android:color/holo_blue_light"
                app:strokeWidth="3sp">

                <EditText
                    android:id="@+id/otp5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:inputType="numberSigned"
                    android:maxLength="1"
                    android:nextFocusLeft="@id/otp4"
                    android:nextFocusRight="@id/otp6"
                    android:nextFocusUp="@id/otp4"
                    android:nextFocusDown="@id/otp6"
                    android:nextFocusForward="@id/otp6"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10sp"
                    android:paddingTop="5sp"
                    android:text="_"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5sp"
                android:clickable="true"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="10sp"
                app:strokeColor="@android:color/holo_blue_light"
                app:strokeWidth="3sp">

                <EditText
                    android:id="@+id/otp6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:inputType="numberSigned"
                    android:maxLength="1"
                    android:nextFocusLeft="@id/otp5"
                    android:nextFocusRight="@id/otp6"
                    android:nextFocusUp="@id/otp5"
                    android:nextFocusDown="@id/otp6"
                    android:nextFocusForward="@id/otp6"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10sp"
                    android:paddingTop="5sp"
                    android:text="_"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>